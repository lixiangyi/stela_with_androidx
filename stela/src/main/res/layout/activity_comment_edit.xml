<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--android:focusable="true"-->
    <!--android:focusableInTouchMode="true"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/item_comment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_comment_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:gravity="left"
            android:hint=""
            android:minHeight="210dp"
            android:textColor="@color/color_73"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

    <TextView
        android:id="@+id/tv_submit_comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stela_app_dp_80"
        android:layout_alignParentBottom="true"
        android:background="@color/stela_blue"
        android:gravity="center"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>

