        <!--android:layout_toLeftOf="@+id/iv_right_icon"-->
        <!--android:layout_marginRight="@dimen/stela_app_dp_16"-->
       <!--/>-->
    <TextView
        android:id="@+id/tv_like_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/stela_app_selector_like"
        android:layout_toLeftOf="@+id/tv_comment_top"
        android:layout_marginRight="@dimen/stela_app_dp_16"

        />
    <TextView
        android:id="@+id/tv_comment_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/ic_comment"
        android:layout_toLeftOf="@+id/iv_right_icon"
        android:layout_marginRight="@dimen/stela_app_dp_10"
      />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_read_chapter"
        android:padding="@dimen/stela_app_dp_5"
        android:layout_marginRight="@dimen/stela_app_dp_10"
        android:visibility="visible" />

</RelativeLayout>
