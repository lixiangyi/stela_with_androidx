<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <com.stela.comics_unlimited.widget.HomeImageView
            android:id="@+id/hiv_e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ></com.stela.comics_unlimited.widget.HomeImageView>

        <com.stela.comics_unlimited.widget.HomeImageView
            android:id="@+id/hiv_e2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ></com.stela.comics_unlimited.widget.HomeImageView>
    </LinearLayout>
    <com.stela.comics_unlimited.widget.HomeCoverView
        android:id="@+id/hiv_e3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></com.stela.comics_unlimited.widget.HomeCoverView>

</LinearLayout>