<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_empty_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_empty_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/stela_app_dp_60"
        android:layout_marginRight="@dimen/stela_app_dp_60"
        android:gravity="center"
        android:text="nothing else"
        android:textColor="@color/color_73"
        android:textSize="14sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/stela_app_dp_48"
        android:padding="-3dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        android:layout_marginTop="30dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/stela_app_always_dp_15"
            android:paddingTop="@dimen/stela_app_dp_5"
            android:paddingRight="@dimen/stela_app_always_dp_15"
            android:paddingBottom="@dimen/stela_app_dp_5"
            android:text="refresh data"
            android:textColor="@color/color_73"
            android:textSize="@dimen/sp_14" />
    </androidx.cardview.widget.CardView>


</LinearLayout>