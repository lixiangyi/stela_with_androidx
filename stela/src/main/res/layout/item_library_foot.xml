<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/stela_app_dp_10"
    android:orientation="vertical"
    >
    <View
        android:id="@+id/view_foot_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/stela_app_always_dp_14"
        android:background="@color/grey_line_e3"/>

    <TextView
        android:id="@+id/tv_collection_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/stela_app_dp_9"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:text="See All >"
        android:textColor="@color/stela_blue_text"
        android:textSize="@dimen/stela_app_sp_10" />
</LinearLayout>