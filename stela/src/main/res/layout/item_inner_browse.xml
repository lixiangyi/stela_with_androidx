<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_series"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stela_app_dp_100"
    android:paddingLeft="@dimen/stela_app_dp_16"
    android:paddingRight="@dimen/stela_app_dp_16"
    tools:context=".ui.chapter.ChapterActivity">
    <ImageView
        android:id="@+id/iv_browse"
        android:layout_width="@dimen/stela_app_dp_80"
        android:layout_height="@dimen/stela_app_dp_80"
        android:layout_marginRight="@dimen/stela_app_dp_16"
        android:layout_marginTop="@dimen/stela_app_dp_20"
        android:scaleType="centerCrop"
        android:transitionName="image"
       />
    <TextView
        android:id="@+id/tv_browse_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/stela_app_sp_14"
        android:textColor="@color/stela_blue_text"
        android:layout_marginTop="@dimen/stela_app_dp_24"
        android:layout_toRightOf="@+id/iv_browse"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Lucha  the Wolf"/>
    <TextView
        android:id="@+id/tv_browse_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_browse"
        android:layout_below="@+id/tv_browse_title"
        android:textColor="@color/color_b2"
        android:textSize="@dimen/stela_app_sp_11"
        android:layout_marginTop="@dimen/stela_app_dp_5"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/stela_app_dp_16"
        tools:text="Contrary to popular belief, Lorem Ipsum
is a piece of classical Latin literature ..."/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/stela_app_always_dp_1"
        android:layout_toRightOf="@+id/iv_browse"
        android:layout_alignBottom="@+id/iv_browse"
        android:background="@color/grey_line_e3"/>

</RelativeLayout>