<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tb_mian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        app:tabTextAppearance="@style/MyHomeLayoutTextAppearance"
        app:tabIndicatorColor="@color/color_d8"
        app:tabIndicatorHeight="@dimen/tab_bar_IndicatorHeight"
        android:elevation="0dp"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color_73"
        app:tabTextColor="@color/color_b2"></com.google.android.material.tabs.TabLayout>
    <View
        android:id="@+id/view_shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/tool_bar_shadow" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>